@model List<MoShopping>

@{
    ViewData["Title"] = "产品列表";
}
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3" title="@item.Name">
            <div class="thumbnail">
                <img src="@item.Url" title="@item.Name" style="height: 200px; width: 100%; display: block;" />
                <div class="caption">
                    <h4>@item.Name</h4>
                    <p><a href="###" class="btn btn-default" target="_blank">￥@item.Price 秒杀</a></p>
                </div>
            </div>
        </div>
    }
</div>
